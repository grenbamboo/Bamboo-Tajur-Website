{% extends 'base.html.twig' %}

{% block body %}
<div class="loading" style="display:none; z-index: 999999999999"></div>
	
	<div class="container">
		<ol class="breadcrumb">
			<li><a href="{{path('index')}}">Beranda</a></li>
			<li>Kontak</li>        
		</ol>
	</div>
	<section class="sub-title" style="margin-top: 180px;">
      <div class="container">
		<div class="row">
	          <div class="col-md-5 col-xs-12">
	            <h2>Kontak</h2>
	          </div>
	     </div>
       </div>
	</section>
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<h4 style="text-align: center;">DAPATKAN NUP ANDA!</h4>
				   	<p style="text-align: center;">NUP: IDR 5,000,000</p>
			    	<form id="send-inquiry" action="{{ path('send_inquiry') }}" method="post" role="form" class="contactForm">
		              <div class="col-md-12">
		                <div class="form">
		                  <div class="form-group">
		                    <input type="text" name="nama" class="form-control" id="nama" placeholder="Nama Anda" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
		                    <div class="validation"></div>
		                  </div>
		                  <div class="form-group">
		                    <input type="email" class="form-control" name="email" id="email" placeholder="E-Mail Anda" data-rule="email" data-msg="Please enter a valid email" />
		                    <div class="validation"></div>
		                  </div>
		                  <div class="form-group">
		                    <input type="text" class="form-control" name="phone" id="phone" placeholder="No. Telp Anda" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
		                    <div class="validation"></div>
		                  </div>
		                  <div class="text-center"><button type="submit" class="btn btn-theme">Kirim</button></div>
		                </div>
		              </div>
		            </form>
			</div>
			<br>
			<div class="col-md-8 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="0.2s" style="visibility: hidden">
				<img class="img-responsive" src="{{ asset('assets/img/mapdesign.jpg') }}">
			</div>
		</div>
	</div>

{% endblock body %}
{% block javascripts %}
<script type="text/javascript">
	$(document).ready(function(){
		var frm = $("#send-inquiry");

		frm.submit(function (e) {
		$('.loading').show();

			e.preventDefault();

			$.ajax({
				type: frm.attr('method'),
				url: frm.attr('action'),
				data: frm.serialize(),
				success: function (data) {
					$('#alert-email').show();
					$('.loading').hide();
				},
				error: function (data) {
					console.log('An error occurred.');
					console.log(data);
				},
			});
		});
	});
</script>
{% endblock javascripts %}