{% block javascripts %}
<script type="text/javascript">
	$(document).ready(function(){
		var frm = $("#send-inquiry-2");

		frm.submit(function (e) {
		$('.loading').show();

			e.preventDefault();

			$.ajax({
				type: frm.attr('method'),
				url: frm.attr('action'),
				data: frm.serialize(),
				success: function (data) {
					$('#alert-email').show();
					$('.loading').hide();
				},
				error: function (data) {
					console.log('An error occurred.');
					console.log(data);
				},
			});
		});
	});
</script>
